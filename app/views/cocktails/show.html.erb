<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<p>Recipe</p>
<% @cocktail.doses.each do |dose| %>
  <li><% dose.description + dose.ingredient.name  %></li>
  <% end %>

<%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Delete this dose", cocktails_path  %>
