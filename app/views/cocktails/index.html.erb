

  <div class="container">
    <h1>List of cocktails</h1>

    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail_path(cocktail) do  %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2>The Bloody Mary</h2>
              <p>The classic tomato-dependent delicacy</p>
            </div>
            <a class="card-link" href="#" ></a>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= link_to 'Add a cocktail', new_cocktail_path  %>
  </div>




